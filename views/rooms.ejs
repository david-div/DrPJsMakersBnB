<link rel="stylesheet" href="../style.css">


<h2 class="blueClass">Rooms</h2>

<h3>  <%= users[users.length - 1].name %> </h3>





<ul>
    <% rooms.forEach(function(room) { %>
    <li class="blueClass">
        <%= room.title %>,
        <%= room.owner %>,
        <%= room.location %>,
        <%= room.description %>,
        Â£<%= room.price %>
